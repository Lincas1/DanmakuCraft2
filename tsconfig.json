{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": false,
    "allowJs": false,
    "sourceMap": true,
    "inlineSources": false,
    "strict": true,
    "downlevelIteration": true
  },
  "include": [
    "client/**/*.ts",
    "scripts/**/*.ts",
    "server/**/*.ts"
  ]
}
