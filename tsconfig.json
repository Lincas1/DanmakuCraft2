{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015"
    ],
    "module": "commonjs",
    "target": "ES5",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./build",
    "allowJs": false,
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/index.ts"
  ]
}
