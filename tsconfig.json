{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017"
    ],
    "module": "commonjs",
    "target": "ES5",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./build",
    "allowJs": false,
    "sourceMap": true,
    "inlineSources": false,
    "strict": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*",
    "./node_modules/phaser/typescript/phaser.comments.d.ts"
  ]
}
